<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1" >

    <TextView
        android:id="@+id/rom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ROM NAME" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rom_name"
        android:layout_centerHorizontal="true"
        android:text="By" />

    <TextView
        android:id="@+id/rom_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="AUTHOR NAME" />

    <Button
        android:id="@+id/whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rom_author"
        android:layout_toLeftOf="@+id/textView2"
        android:text="Download whole rom" 
        android:linksClickable="true" 
        android:onClick="DownloadWhole" />

    <Button
        android:id="@+id/incremental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/whole"
        android:layout_toRightOf="@+id/textView2"
        android:text="Download incremental update" />

</RelativeLayout>